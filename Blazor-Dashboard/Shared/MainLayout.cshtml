@functions {
    bool collapseSideMenu = true;

    void ToggleSideMenu()
    {
        collapseSideMenu = !collapseSideMenu;
    }

    //bool collapseNavMenu = true;

    void ToggleNavMenu()
    {
        //collapseNavMenu = !collapseNavMenu;
        System.Diagnostics.Debug.WriteLine("ToogleNavMenu");
        BlazorDashboard.XSingleton.NavBarDisplay = !BlazorDashboard.XSingleton.NavBarDisplay;
        StateHasChanged();
    }

    public async static Task LaunchSideBar()
    {
        await JSRuntime.Current.InvokeAsync<bool>("LaunchSideBar");
    }

}
